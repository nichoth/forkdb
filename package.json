{
  "name": "@nichoth/forkdb",
  "version": "0.0.0",
  "private": true,
  "description": "Forking, etc",
  "type": "module",
  "engines": {
    "node": "^22.0.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*"
    ]
  },
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "//test": "esbuild test/index.ts --platform=node --format=esm --keep-names | node --input-type=module | tap-spec",
    "test": "npx ts-node --esm --project tsconfig.test.json test/index.ts",
    "build-esm": "esbuild src/*.ts --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-esm",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf ./dist",
    "start": "vite",
    "build-example": "vite build"
  },
  "dependencies": {
    "@substrate-system/button": "^0.0.35",
    "@substrate-system/json-canon": "^0.1.3",
    "bytewise": "^1.1.0",
    "content-addressable-blob-store": "^5.1.0",
    "duplexer2": "^0.1.4",
    "hash-exchange": "^4.0.1"
  },
  "devDependencies": {
    "@preact/signals": "^2.8.1",
    "@substrate-system/css-normalize": "^0.0.13",
    "@substrate-system/debug": "^0.9.60",
    "@substrate-system/tapzero": "^0.10.16",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.5.0",
    "browser-level": "^2.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "events": "^3.3.0",
    "htm": "^3.1.1",
    "level": "^9.0.0",
    "markdown-toc": "^1.2.0",
    "preact": "^10.28.4",
    "tap-spec": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "forkdb",
    "db",
    "merkle-dag"
  ],
  "homepage": "https://github.com/substrate-system/forkdb",
  "bugs": {
    "url": "https://github.com/substrate-system/forkdb/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/forkdb.git"
  },
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE"
}
